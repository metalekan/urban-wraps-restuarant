rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Wraps - Public read, no write (managed via admin/seed)
    match /wraps/{wrapId} {
      allow read: if true;
      allow write: if false; // Only via admin SDK or seed script
    }
    
    // Ingredients - Public read, no write
    match /ingredients/{ingredientId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Add-ons - Public read, no write
    match /addOns/{addOnId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Users - Users can read/write their own profile
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if false; // Prevent deletion
    }
    
    // Orders - Users can create and read their own orders
    match /orders/{orderId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.userEmail == request.auth.token.email;
      allow update: if false; // Orders cannot be updated by users
      allow delete: if false; // Orders cannot be deleted
    }
    
    // Reservations - Users can create and read their own reservations
    match /reservations/{reservationId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.userEmail == request.auth.token.email;
      allow update: if isOwner(resource.data.userId) && 
                       request.resource.data.status in ['cancelled']; // Only allow cancellation
      allow delete: if false;
    }
  }
}
